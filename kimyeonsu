    <script>
        const apiKey = "";
        const container = document.querySelector("#scroll-container");
        const yieldDisplay = document.getElementById('yield-display');
        const chips = [
            document.getElementById('chip-intro'),
            document.getElementById('chip-about'),
            document.getElementById('chip-history'), 
            // skills removed
            document.getElementById('chip-specs'),
            document.getElementById('chip-contact')
        ];
        
        let scrollPosition = 0;
        let maxScroll = 0;
        const totalSections = 5; // Reduced to 5

        function updateMaxScroll() {
            maxScroll = container.scrollWidth - window.innerWidth;
        }

        updateMaxScroll();
        window.addEventListener('resize', updateMaxScroll);

        function handleScroll(delta) {
            scrollPosition += delta;
            if (scrollPosition < 0) scrollPosition = 0;
            if (scrollPosition > maxScroll) scrollPosition = maxScroll;
            
            container.style.transform = `translateX(-${scrollPosition}px)`;

            const currentSectionIndex = Math.round((scrollPosition / maxScroll) * (totalSections - 1));
            
            chips.forEach((chip, index) => {
                if(index <= currentSectionIndex) {
                    chip.classList.add('active');
                } else {
                    chip.classList.remove('active');
                }
            });

            const progress = scrollPosition / maxScroll;
            let yieldRate = (progress * 99.9).toFixed(1);
            if(yieldRate > 99.9) yieldRate = 99.9;
            yieldDisplay.innerText = yieldRate.padStart(4, '0');

            checkSectionAnimations();
        }
        
        const historySection = document.getElementById('history');
        const timelineItems = document.querySelectorAll('.timeline-item');
        
        function checkSectionAnimations() {
            const rect = historySection.getBoundingClientRect();
            if (rect.left < window.innerWidth * 0.8 && rect.right > window.innerWidth * 0.2) {
                timelineItems.forEach((item) => {
                     item.classList.add('visible');
                });
            }
        }


        if (window.matchMedia("(min-width: 768px)").matches) {
            window.addEventListener("wheel", (evt) => {
                // [수정] 중요! 타임라인 컨테이너 내부에서 스크롤 시 가로 이동 로직을 막음
                if (evt.target.closest('#history-timeline')) {
                    // 여기서 return하면 브라우저 기본 동작(세로 스크롤)이 실행됨
                    // 단, 상위 이벤트 전파를 막아야 할 수도 있으나, return만으로도 handleScroll 호출을 막을 수 있음.
                    return; 
                }
                
                evt.preventDefault();
                handleScroll(evt.deltaY);
            }, { passive: false });
        }

        window.scrollToNext = function() {
            if (window.matchMedia("(min-width: 768px)").matches) {
                const oneSectionWidth = window.innerWidth;
                handleScroll(oneSectionWidth);
            }
        }

        window.startProcess = function(card) {
            if(card.classList.contains('is-unlocked') || card.classList.contains('is-processing')) return;
            card.classList.add('is-processing');
            const bar = card.querySelector('.progress-bar-fill');
            setTimeout(() => { bar.style.transition = 'width 1s linear'; bar.style.width = '100%'; }, 50);
            setTimeout(() => {
                card.classList.remove('is-processing');
                card.classList.add('is-unlocked');
            }, 1200);
        };

        const canvas = document.getElementById('intro-canvas');
        const ctx = canvas.getContext('2d');
        let width, height;
        let lines = [];

        function resizeCanvas() {
            width = window.innerWidth;
            height = window.innerHeight;
            canvas.width = width;
            canvas.height = height;
        }
        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();

        let lastX = 0, lastY = 0;
        document.querySelector('#intro').addEventListener('mousemove', (e) => {
            const currentX = e.clientX;
            const currentY = e.clientY;
            
            if(Math.abs(currentX - lastX) + Math.abs(currentY - lastY) > 20) {
                lines.push({
                    x: currentX, y: currentY, 
                    life: 1.0, 
                    angle: Math.random() * Math.PI * 2
                });
                lastX = currentX; lastY = currentY;
            }
        });

        function animateCanvas() {
            ctx.clearRect(0, 0, width, height);
            ctx.strokeStyle = '#0055ff';
            ctx.lineWidth = 1;
            
            for(let i = 0; i < lines.length; i++) {
                let l = lines[i];
                ctx.beginPath();
                ctx.moveTo(l.x, l.y);
                ctx.lineTo(l.x + Math.cos(l.angle) * 30, l.y + Math.sin(l.angle) * 30);
                
                ctx.globalAlpha = l.life;
                ctx.stroke();
                l.life -= 0.02;
            }
            lines = lines.filter(l => l.life > 0);
            requestAnimationFrame(animateCanvas);
        }
        animateCanvas();

        window.toggleNode = function(el) {
            el.classList.toggle('active');
            if(el.classList.contains('active')) {
                el.innerHTML = '<i class="fa-solid fa-check mr-1"></i> PROCESS OK';
            }
        };

        window.togglePower = function(btn) {
            btn.classList.toggle('active');
            if(!btn.classList.contains('active')) {
                document.body.style.filter = 'grayscale(100%) brightness(0.5)';
            } else {
                document.body.style.filter = 'none';
            }
        };

        window.runSystemCheck = function(btn) {
            if(btn.classList.contains('active')) return;
            btn.classList.add('active');
            const msg = document.getElementById('sys-check-msg');
            msg.classList.remove('hidden');
            setTimeout(() => {
                msg.innerHTML = '<i class="fa-solid fa-check mr-2"></i> ALL SYSTEMS GO';
                msg.classList.replace('text-green-600', 'text-blue-600');
            }, 2000);
        };

        function toggleChat() {
            document.getElementById('chat-window').classList.toggle('open');
            if(document.getElementById('chat-window').classList.contains('open')) {
                document.getElementById('chat-input').focus();
            }
        }

        function handleKeyPress(e) {
            if (e.key === 'Enter') sendMessage();
        }

        async function sendMessage() {
            const input = document.getElementById('chat-input');
            const message = input.value.trim();
            const messagesDiv = document.getElementById('chat-messages');
            const loadingIndicator = document.getElementById('typing-indicator');

            if (!message) return;

            messagesDiv.innerHTML += `<div class="message msg-user">${message}</div>`;
            input.value = '';
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
            loadingIndicator.style.display = 'block';

            try {
                const context = `
                    You are an AI Lab Assistant for Kim Yeon-su's Portfolio website.
                    Answer the visitor's questions professionally, concisely, and enthusiastically.
                    Profile: Name: Kim Yeon-su, Age: 24, Major: Semiconductor Engineering, Inje Univ.
                    Key Exp: Tennis Club Winner, Indonesia Volunteer, Internship at Korea Univ (Micro LED).
                    Language: Korean.
                `;

                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: [{ parts: [{ text: context + "\n\nUser Question: " + message }] }]
                    })
                });

                const data = await response.json();
                const aiResponse = data.candidates[0].content.parts[0].text;

                loadingIndicator.style.display = 'none';
                messagesDiv.innerHTML += `<div class="message msg-ai">${aiResponse.replace(/\n/g, '<br>')}</div>`;
                messagesDiv.scrollTop = messagesDiv.scrollHeight;

            } catch (error) {
                loadingIndicator.style.display = 'none';
                messagesDiv.innerHTML += `<div class="message msg-ai">System Error. Try again.</div>`;
            }
        }
    </script>
</body>
</html>
